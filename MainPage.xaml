<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bvelozt1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="Calculo IESS" FontSize="Medium" HorizontalTextAlignment="Center"></Label>
            <Label Text="Nombre"></Label>
            <Entry x:Name="txtNombre" Placeholder="Ingrese su Nombre"></Entry>
            <Label Text="Apellido"></Label>
            <Entry x:Name="txtApellido" Placeholder="Ingrese su Apellido"></Entry>
            <Label Text="Edad"></Label>
            <Entry x:Name="txtEdad" Placeholder="Ingrese su Edad"></Entry>
            <Label Text="Salario"></Label>
            <Entry x:Name="txtSalario" Placeholder="Ingrese su Salario"></Entry>
            <Button x:Name="btnCalcular" Text="Calcular" BackgroundColor="MediumPurple" Clicked="calcular"></Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
